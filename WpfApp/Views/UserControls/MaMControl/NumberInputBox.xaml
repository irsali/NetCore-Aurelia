<UserControl x:Class="WpfApp.Views.UserControls.MaMControl.NumberInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views.UserControls.MaMControl"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBox x:Name="FormField_Value"
             cal:Message.Attach="[Event PreviewTextInput] = [Action NumberValidation($this, $eventArgs)]"
             HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Top" />
</UserControl>
